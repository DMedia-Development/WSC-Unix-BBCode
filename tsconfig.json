{
    "include": [
        "node_modules/@woltlab/d.ts/global.d.ts",
        "ts/**/*"
    ],
    "compilerOptions": {
        "target": "es2017",
        "module": "amd",
        "rootDir": "ts/",
        "outDir": "files/js/",
        "lib": [
            "dom",
            "es2017"
        ],
        "strictNullChecks": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/@woltlab/d.ts/*"
            ]
        },
        "importHelpers": true,
        "removeComments": true
    }
}